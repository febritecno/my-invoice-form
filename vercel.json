{
  "version": 2,
  "builds": [
    { "src": "/backend/**", "use": "@vercel/node" },
    { "src": "/frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/backend/(.*)",
      "dest": "/backend/$1",
      "status": 200
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "rewrites": [
    { "source": "/backend/(.*)", "destination": "http://localhost:5000/$1" }
  ]
}