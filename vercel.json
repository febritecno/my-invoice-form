{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "routes": [
    { "src": "/frontend/(.*)", "dest": "frontend/$1" },
    {
      "src": "/(.*)",
      "dest": "/backend/$1"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/backend/api/:path*" }
  ]
}